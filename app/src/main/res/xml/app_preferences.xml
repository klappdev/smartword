<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/language_header">
        <ListPreference
            app:defaultValue="language"
            app:entries="@array/language_full_names"
            app:entryValues="@array/language_short_names"
            app:key="language"
            app:title="@string/language_title"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/theme_header">
        <SwitchPreferenceCompat
            app:key="theme"
            app:title="@string/theme_title" />
    </PreferenceCategory>

</PreferenceScreen>