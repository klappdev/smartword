<resources>

    <!-- Base application theme. -->
    <style name="SmartWord.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkness</item>
        <item name="colorAccent">@color/gray_color</item>
    </style>

    <style name="SmartWord.Theme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SmartWord.Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SmartWord.Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
